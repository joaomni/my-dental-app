<section class="faq">
  <h1 class="title">FAQ</h1>
  <p class="subtitle">VocÃª tem alguma pergunta?</p>
  <main>
    {% for faq in faqs -%}
    <article class="faq-box">
      <details>
        <summary>{{ faq.question }}</summary>
        <p>{{ faq.response }}</p>
      </details>
    </article>
    {%- endfor %}
  </main>

  <a href="#cel" rel="canonical" class="button">Saiba mais</a>
</section>

<style>
  .faq {
    margin-top: 8em;
    text-align: center;
    display: grid;
    gap: 1.5em;
    font-size: 18px;
  }
  .faq main {
    display: grid;
    gap: 1.3em;
  }
  details {
  border-radius: 28px;
  border: 1px solid var(--blue-thin);
  background: #FFF;
  padding: 22px 68px;
  text-align: left;
}

summary {
  list-style-type: none;
  color: var(--blue-strong);
  font-size: 24px;
  font-style: normal;
  font-weight: 600;
  line-height: normal;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
summary::-webkit-details-marker {
  display: none; /* Chrome */
}

summary::before {
  content: "";
  width: 34px;
  height: 34px;
  background-image: url('https://raw.githubusercontent.com/joaomni/cdn/main/open-button.svg');
  background-size: cover;
  order: 2;
}

details[open] summary::before {
  background-image: url('https://raw.githubusercontent.com/joaomni/cdn/main/close-button.svg'); /* Imagem quando aberto */
}
</style>